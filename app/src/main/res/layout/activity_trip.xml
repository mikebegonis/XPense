<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:id="@+id/trip">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Trip S"
        android:textColor="#ff0675ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/destinationPrefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination(s): "
        android:textColor="#ff0675ff"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chicago"
        android:textColor="#ff0675ff"
        android:layout_alignTop="@+id/destinationPrefix"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp" />

    <TextView
        android:id="@+id/totalPrefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Running Total: "
        android:textColor="#ff0675ff"
        android:layout_below="@+id/destinationPrefix"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$120"
        android:textColor="#ff0675ff"
        android:layout_below="@+id/destinationPrefix"
        android:layout_alignStart="@+id/destination" />



</RelativeLayout>