<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!--<TextView-->
        <!--android:id="@+id/feed_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/travel_mode_temp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/travel_mode_prompt_string"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceLarge"/>

        <CheckBox
            android:id="@+id/travel_mode_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:onClick="onCheckBoxClicked"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/txt_set_trigger_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:hint="Trigger Time"
            android:inputType="numberDecimal"
            android:textAppearance="?android:textAppearanceLarge"/>

        <Button
            android:id="@+id/btn_set_trigger_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/set"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/txt_set_geofence_radius"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:hint="Geofence Radius"
            android:inputType="number"
            android:textAppearance="?android:textAppearanceLarge"/>

        <Button
            android:id="@+id/btn_set_geofence_radius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/set"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/txt_set_places_radius"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:hint="Places Radius"
            android:inputType="number"
            android:textAppearance="?android:textAppearanceLarge"/>

        <Button
            android:id="@+id/btn_set_places_radius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/set"
            />
    </LinearLayout>

        <Button
            android:id="@+id/travel_mode_button_clear_location_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Clear Location Data"
            />

    </LinearLayout>
</ScrollView>

