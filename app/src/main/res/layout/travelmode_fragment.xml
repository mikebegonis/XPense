<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--<TextView-->
        <!--android:id="@+id/feed_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/travel_mode_temp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/travel_mode_prompt_string"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceLarge"/>

            <CheckBox
                android:id="@+id/travel_mode_checkbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:onClick="onCheckBoxClicked"/>
        </LinearLayout>

        <Button
            android:id="@+id/travel_mode_button_clear_location_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Clear Location Data"
            />

    </LinearLayout>
</ScrollView>